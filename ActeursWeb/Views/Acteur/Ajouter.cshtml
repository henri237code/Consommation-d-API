@{
    ViewBag.Title = "Ajouter";
}
@model ActeursWeb.Models.Acteur

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Ajout d’un acteur</title>
    <style>
        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        input {
            width: 100%;
            padding: 8px;
        }

        button {
            padding: 10px 15px;
            background-color: #28a745;
            color: white;
            border: none;
        }
    </style>
</head>
<body>

    <h2>Ajout d’un nouvel acteur</h2>

    @if (ViewBag.Error != null)
    {
        <p style="color:red">@ViewBag.Error</p>
    }

    @using (Html.BeginForm("Ajouter", "Acteur", FormMethod.Post))
    {
        <div class="form-group">
            <label>ID</label>
            @Html.TextBoxFor(m => m.id)
        </div>
        <div class="form-group">
            <label>Nom</label>
            @Html.TextBoxFor(m => m.name)
        </div>
        <div class="form-group">
            <label>Biographie</label>
            @Html.TextBoxFor(m => m.bio)
        </div>
        <div class="form-group">
            <label>Image (URL)</label>
            @Html.TextBoxFor(m => m.picture)
        </div>
        <button type="submit">Ajouter</button>
    }

</body>
</html>


